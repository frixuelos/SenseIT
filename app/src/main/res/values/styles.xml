<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationStyle">@style/bottomNavStyle</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/design_load</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="bottomNavStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_nav_bar</item>
        <item name="itemTextColor">@color/bottom_nav_bar</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/titleColor</item>
        <item name="android:actionOverflowButtonStyle">@style/ToolbarTheme.actionOverflowButton</item>
        <item name="colorControlNormal">@color/titleColor</item>
        <item name="android:textColorHint">@color/titleColor</item>
        <item name="android:textColorSecondary">@color/titleColor</item>
    </style>

    <style name="ToolbarTheme.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!--<item name="fontFamily">monospace</item>-->
    </style>

    <style name="ToolbarTheme.actionOverflowButton" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/titleColor</item>
    </style>

</resources>
